<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Asignaciones</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/SheetJS/0.18.5/xlsx.full.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        }
        .custom-shadow {
            box-shadow: 0 10px 25px rgba(0,0,0,0.1), 0 6px 10px rgba(0,0,0,0.05);
        }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
</head>
<body class="min-h-screen flex flex-col">
    <nav class="bg-gradient-to-r from-blue-600 to-purple-700 text-white p-4 shadow-lg">
        <div class="container mx-auto flex justify-between items-center">
            <div class="flex items-center space-x-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="3" y="3" width="7" height="7"></rect>
                    <rect x="14" y="3" width="7" height="7"></rect>
                    <rect x="14" y="14" width="7" height="7"></rect>
                    <rect x="3" y="14" width="7" height="7"></rect>
                </svg>
                <h1 class="text-2xl font-bold">Gestor de Asignaciones</h1>
            </div>
            <a href="/asignaciones/crear" class="bg-green-500 hover:bg-green-600 px-4 py-2 rounded-full flex items-center space-x-2 transition duration-300 transform hover:scale-105">
                <i data-feather="plus-circle"></i>
                <span>Nueva Asignación</span>
            </a>
        </div>
    </nav>

    <main class="container mx-auto px-4 py-8 flex-grow">
        <div class="bg-white custom-shadow rounded-2xl overflow-hidden">
            <div class="p-6 bg-gray-50 border-b border-gray-200 flex justify-between items-center">
                <h2 class="text-xl font-semibold text-gray-800 flex items-center">
                    <i data-feather="clipboard" class="mr-3"></i>
                    Listado de Asignaciones
                </h2>
                <div class="flex items-center w-1/3">
                    <div class="relative w-full">
                        <i data-feather="search" class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                        <input type="text" id="search" placeholder="Filtrar por usuario, equipo o estado" class="pl-10 pr-4 py-2 w-full border rounded-lg focus:ring focus:ring-blue-300 focus:outline-none" onkeyup="filtrarTabla()">
                    </div>
                </div>
            </div>

            <div class="overflow-x-auto">
                <table id="tabla-asignaciones" class="w-full table-auto">
                    <thead class="bg-gray-200">
                        <tr class="border-b">
                            <th class="p-4 text-left text-gray-600 font-medium">Usuario</th>
                            <th class="p-4 text-left text-gray-600 font-medium">Equipo</th>
                            <th class="p-4 text-left text-gray-600 font-medium">Estado</th>
                            <th class="p-4 text-left text-gray-600 font-medium">Fecha Asignación</th>
                            <th class="p-4 text-left text-gray-600 font-medium">Fecha Devolución</th>
                            <th class="p-4 text-left text-gray-600 font-medium">Razón</th>
                            <th class="p-4 text-left text-gray-600 font-medium">Observaciones</th>
                            <th class="p-4 text-center text-gray-600 font-medium">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% asignaciones.forEach(function(asignacion) { %>
                            <tr class="border-b hover:bg-gray-50 transition">
                                <td class="p-4 flex items-center space-x-3">
                                    <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
                                        <i data-feather="user" class="text-blue-600"></i>
                                    </div>
                                    <span class="text-gray-800 font-semibold"><%= asignacion.nombre_usuario || 'Nombre no disponible' %></span>
                                </td>
                                <td class="p-4">
                                    <span class="bg-purple-100 text-purple-600 px-3 py-1 rounded-full text-sm">
                                        <%= asignacion.nombre_equipo || 'Equipo no disponible' %>
                                    </span>
                                </td>
                                <td class="p-4">
                                    <span class="<%= asignacion.estado === 'activa' ? 'bg-green-100 text-green-600' : 'bg-red-100 text-red-600' %> px-3 py-1 rounded-full text-sm">
                                        <%= asignacion.estado %>
                                    </span>
                                </td>
                                <td class="p-4 text-gray-600">
                                    <%= new Date(asignacion.fecha_asignacion).toLocaleDateString() %>
                                </td>
                                <td class="p-4 text-gray-600">
                                    <%= asignacion.fecha_devolucion ? new Date(asignacion.fecha_devolucion).toLocaleDateString() : 'Pendiente' %>
                                </td>
                                <td class="p-4 text-gray-600">
                                    <%= asignacion.razon_asignacion || 'Sin razón' %>
                                </td>
                                <td class="p-4 text-gray-600">
                                    <%= asignacion.observaciones || 'Sin observaciones' %>
                                </td>
                                <td class="p-4">
                                    <div class="flex justify-center space-x-2">
                                        <a href="/asignaciones/editar/<%= asignacion.id_asignacion %>" class="text-blue-500 hover:text-blue-700 hover:bg-blue-100 p-2 rounded-full transition">
                                            <i data-feather="edit-2"></i>
                                        </a>
                                        <a href="/asignaciones/eliminar/<%= asignacion.id_asignacion %>" class="text-red-500 hover:text-red-700 hover:bg-red-100 p-2 rounded-full transition">
                                            <i data-feather="trash-2"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>

    <footer class="bg-gray-800 text-white py-4">
        <div class="container mx-auto text-center">
            <p>&copy; 2024 Sistema de Gestión de Asignaciones</p>
        </div>
    </footer>

    <script>
        feather.replace();
        
        function filtrarTabla() {
            let input = document.getElementById("search").value.toLowerCase();
            let rows = document.querySelectorAll("#tabla-asignaciones tbody tr");
            
            rows.forEach(row => {
                let usuario = row.cells[0].innerText.toLowerCase();
                let equipo = row.cells[1].innerText.toLowerCase();
                let estado = row.cells[2].innerText.toLowerCase();
                
                row.style.display = usuario.includes(input) || equipo.includes(input) || estado.includes(input) ? "" : "none";
            });
        }
    </script>
</body>
</html>

