<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Usuarios</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
      rel="stylesheet">
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <%- include('../partials/header.ejs') %>
    
    <main class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="mb-0">Gestión de Usuarios</h1>
            <a href="/crear-usuarios" class="btn btn-success">
                <i class="bi bi-plus-circle me-2"></i>Crear Usuario
            </a>
        </div>
        
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-primary">
                            <tr>
                                <th>ID</th>
                                <th>Nombre</th>
                                <th>Correo</th>
                                <th class="d-none d-md-table-cell">Teléfono</th>
                                <th class="d-none d-lg-table-cell">Contraseña</th>
                                <th>Rol</th>
                                <th class="d-none d-md-table-cell">Fecha Registro</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (typeof usuarios !== 'undefined' && usuarios.length > 0) { %>
                                <% usuarios.forEach((usuario) => { %>
                                    <% 
                                        var roleBadgeClass = '';
                                        if (usuario.rol.toLowerCase() === 'admin') {
                                            roleBadgeClass = 'role-admin';
                                        } else if (usuario.rol.toLowerCase() === 'tecnico') {
                                            roleBadgeClass = 'role-tecnico';
                                        } else {
                                            roleBadgeClass = 'role-usuario';
                                        }
                                    %>
                                    <tr>
                                        <td><%= usuario.id_usuario %></td>
                                        <td><%= usuario.nombre %></td>
                                        <td><%= usuario.correo %></td>
                                        <td class="d-none d-md-table-cell"><%= usuario.telefono %></td>
                                        <td class="d-none d-lg-table-cell"><%= usuario.contrasena %></td>
                                        <td>
                                            <span class="badge <%= roleBadgeClass %>">
                                                <%= usuario.rol %>
                                            </span>
                                        </td>
                                        <td class="d-none d-md-table-cell">
                                            <%= usuario.fecha_registro.toISOString().split('T')[0] %>
                                        </td>
                                        <td>
                                            <div class="d-flex gap-2">
                                                <a href="/ver-usuarios/<%= usuario.id_usuario %>" class="btn btn-sm btn-outline-primary" title="Ver">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a href="/editar-usuarios/<%= usuario.id_usuario %>" class="btn btn-sm btn-outline-warning" title="Editar">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a href="/eliminar-usuarios/<%= usuario.id_usuario %>" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="8" class="text-center">No hay usuarios registrados</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

