<%- include('../partials/header') %>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">Historial de Equipos Asignados</h1>
            
            <% if (equipos && equipos.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Nombre</th>
                                <th>Tipo</th>
                                <th>Marca</th>
                                <th>Modelo</th>
                                <th>Fecha Asignación</th>
                                <th>Fecha Devolución</th>
                                <th>Estado</th>
                                <th>Reparaciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% equipos.forEach(equipo => { %>
                                <tr>
                                    <td><%= equipo.nombre %></td>
                                    <td><%= equipo.tipo %></td>
                                    <td><%= equipo.marca %></td>
                                    <td><%= equipo.modelo %></td>
                                    <td><%= equipo.fecha_asignacion ? new Date(equipo.fecha_asignacion).toLocaleDateString() : 'N/A' %></td>
                                    <td><%= equipo.fecha_devolucion ? new Date(equipo.fecha_devolucion).toLocaleDateString() : 'En uso' %></td>
                                    <td>
                                        <% if (equipo.estado === 'asignado') { %>
                                            <span class="badge bg-success">Asignado</span>
                                        <% } else if (equipo.estado === 'disponible') { %>
                                            <span class="badge bg-primary">Devuelto</span>
                                        <% } else if (equipo.estado === 'en_reparacion') { %>
                                            <span class="badge bg-warning">En Reparación</span>
                                        <% } else { %>
                                            <span class="badge bg-secondary"><%= equipo.estado %></span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (equipo.reparacion_descripcion) { %>
                                            <button class="btn btn-sm btn-info" type="button" data-bs-toggle="collapse" data-bs-target="#reparacion<%= equipo.id %>" aria-expanded="false">
                                                Ver detalles
                                            </button>
                                            <div class="collapse mt-2" id="reparacion<%= equipo.id %>">
                                                <div class="card card-body">
                                                    <p><strong>Problema:</strong> <%= equipo.reparacion_descripcion %></p>
                                                    <% if (equipo.reparacion_solucion) { %>
                                                        <p><strong>Solución:</strong> <%= equipo.reparacion_solucion %></p>
                                                    <% } else { %>
                                                        <p><em>Aún no se ha aplicado una solución</em></p>
                                                    <% } %>
                                                </div>
                                            </div>
                                        <% } else { %>
                                            <span class="text-muted">Sin reparaciones</span>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="alert alert-info">
                    <p>No tienes equipos asignados en tu historial.</p>
                </div>
            <% } %>
            
            <div class="mt-4">
                <a href="/mi-equipo" class="btn btn-primary">Volver a Mis Equipos</a>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
